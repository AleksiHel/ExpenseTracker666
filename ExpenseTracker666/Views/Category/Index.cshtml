@model CategoryViewModel


<h1 class="text-center fw-bold">Add Category</h1>
<form asp-controller="Category" asp-action="Index" method="post" class="d-flex flex-column align-items-center">
    <div class="form-group p-1">
        <label asp-for="NewCategory.CategoryName" class="form-label">Category name</label>
        <input asp-for="NewCategory.CategoryName" class="form-control" />
        <span asp-validation-for="NewCategory.CategoryName" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-dark p-1 mt-1 mb-2">Add</button>
</form>
<h2>Categories in the database</h2>

<div class="categories">
    <hr>

    @foreach (var category in Model.Categories)
    {
        <p>@Html.DisplayFor(modelItem => category.CategoryName) </p>
    }
</div>
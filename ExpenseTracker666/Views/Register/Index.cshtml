@model Users

<div class="container-sm p-3 align-content-center mt-5" style="max-width: 500px;">
    <h1 class="text-center fw-bold">Register account</h1>
    <form asp-controller="Register" asp-action="Index" method="post" class="d-flex flex-column align-items-center">
        <div class="form-group p-1">
            <label asp-for="Name" class="form-label">Name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group p-1">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-dark p-1 mt-1 mb-2">Register</button>
    </form>
</div>
